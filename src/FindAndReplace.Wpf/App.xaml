<Application x:Class="FindAndReplace.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="clr-namespace:FindAndReplace.Wpf.Mvvm"
             d1p1:Ignorable="d"
             StartupUri="Views\MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <mvvm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Colors.xaml"/>
                <ResourceDictionary Source="Theme/ControlTemplates.xaml"/>
                <ResourceDictionary Source="Theme/Styles.xaml"/>
                <ResourceDictionary Source="Theme/Values.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
