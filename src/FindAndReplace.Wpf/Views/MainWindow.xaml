<Window x:Class="FindAndReplace.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dvm="clr-namespace:FindAndReplace.Wpf.DesignViewModels"
        DataContext="{Binding MainViewModel, Source={StaticResource Locator}}"
        d:DataContext="{d:DesignInstance dvm:DesignMainViewModel, IsDesignTimeCreatable=True}"
        xmlns:local="clr-namespace:FindAndReplace.Wpf"
        mc:Ignorable="d"
        Title="Find &amp; Replace" Height="790" Width="1047"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" IsMainMenu="True">
            <MenuItem Header="Help">
                <MenuItem Header="View Online Help"/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </Grid>

</Window>
